{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist-cli",
    "module": "esnext",
    "target": "ES2018",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipDefaultLibCheck": true,
  },
  "include": [
    "src/cli/**/*.ts",
    "src/shared/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
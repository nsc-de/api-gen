{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "lib",
    "module": "CommonJS",
    "target": "ES2018",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ES6"
    ],
  },
  "include": [
    "src/shared/**/*.ts",
    "src/server/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ], 
  "typedocOptions": {
    "entryPoints": ["src/server/index.ts"],
    "out": "docs"
  }
}
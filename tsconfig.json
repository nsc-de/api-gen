{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "module": "esnext",
    "target": "ES2018",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "ES6"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}